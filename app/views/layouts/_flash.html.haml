- if flash[:notice]
  .alert.alert-info.fade.in{:'data-alert' => true}
    %a{:class => 'close', :'data-dismiss' => 'alert', :href => '#'}
      %i.icon-remove
    %p
      = flash[:notice]
- if flash[:warning]
  .alert.fade.in{:'data-alert' => true}
    %a{:class => 'close', :'data-dismiss' => 'alert', :href => '#'}
      %i.icon-remove
    %p
      = flash[:warning]
- if flash[:error]
  .alert.alert-error.fade.in{:'data-alert' => true}
    %a{:class => 'close', :'data-dismiss' => 'alert', :href => '#'}
      %i.icon-remove
    %p
      = flash[:error]