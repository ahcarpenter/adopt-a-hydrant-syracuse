.table
  .table-row
    .table-cell.sidebar
      %h1
        %a{:href => 'http://adopt-a-hydrant-syracuse.herokuapp.com/'}
          = image_tag 'logos/adopt-a-hydrant-syracuse-snow-capped.png', :alt => t('titles.main', :thing => t('defaults.thing').titleize), :title => t('titles.main', :thing => t('defaults.thing').titleize), :id => 'adopt-a-hydrant-syracuse-snow-capped'
      %p.alert-message.block-message#tagline
        = t('defaults.tagline')
      #content
        = render :partial => 'layouts/flash', :locals => {:flash => flash}
        - if signed_in?
          = render :partial => 'sidebar/search'
        - else
          = render :partial => 'sidebar/combo_form'
      #logos
        %a{:href => 'http://github.com/syracuse-saves'}
          = image_tag 'logos/syracusesaves.png', :id => 'syracusesaves_logo', :alt => 'Syracuse Saves', :title => 'Syracuse Saves'
        #col1
          %a{:href => 'http://codeforamerica.org/'}
            = image_tag 'logos/cfa.png', :alt => t('sponsors.cfa'), :title => t('sponsors.cfa'), :id => 'cfa'
        #col2
          %a{:href => 'http://bostonbuilt.org/'}
            = image_tag 'logos/boston&lexingtonbuilt.png', :alt => t('sponsors.built'), :title => t('sponsors.built'), :id => 'boston-and-lexington-built'
      #feedback
        %p
          %a{:href => URI.escape("mailto:adoptahydrantsyracuse@gmail.com?subject=#{t('titles.main', :thing => t('defaults.thing').titleize)} #{t('links.feedback').titleize}")}
            = t('links.feedback')
    .table-cell.map-container
      %i.icon-download-alt
      = link_to t('links.data'), 'xml/hydrants.kml', :id=>'download-link'
      #filter
        %btn{:id => 'adopted-sieve', :class => 'btn btn-danger', :type => 'submit', :name => 'commit', 'data-toggle'=>'buttons-checkbox', 'data-title'=>'Enable adopted sieve'}
          %i.icon-filter
      #map
        &nbsp;